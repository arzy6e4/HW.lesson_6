<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_dobro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"/>

    <TextView
        android:id="@+id/text_uslov"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_dobro"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:text="Выполните вход или зарегистрируйтесь."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/text_email"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/text_uslov"
        android:textColorHint="@color/white"
        android:textSize="24dp"
        android:hint="Введите вашу почту"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/text_password"
        app:layout_constraintTop_toBottomOf="@id/text_email"
        android:layout_marginHorizontal="24dp"
        android:textColorHint="@color/white"
        android:textSize="24dp"
        android:hint="Введите пароль"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_color"
        android:layout_marginTop="16dp"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        app:cornerRadius="20dp"
        android:textSize="24dp"
        android:text="Войти"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>